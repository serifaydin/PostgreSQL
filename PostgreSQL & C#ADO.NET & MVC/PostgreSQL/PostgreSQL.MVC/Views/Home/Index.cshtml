@using PostgreSQL.MVC.ViewModel
@model HomeViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>

</head>
<body>
    <div class="container">

        @using (Html.BeginForm())
        {
            <form>
                <div class="row">
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="nameID">Name</label>
                            @Html.TextBoxFor(model => model.User.Name, new { @class = "form-control", placeholder = "Name", @id = "nameID" })
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="usernameID">Surname</label>
                            @Html.TextBoxFor(model => model.User.Surname, new { @class = "form-control", placeholder = "Surname", @id = "usernameID" })
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="birtDateID">BirthDate</label>
                            @Html.TextBoxFor(model => model.User.BirthDate, new { @class = "form-control", @id = "birtDateID", type = "date" })
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">User Added</button>
            </form>
        }


        <hr />

        <div>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">BirthDate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.UserList)
                    {
                        <tr>
                            <th scope="row">@user.ID</th>
                            <td>@user.Name</td>
                            <td>@user.Surname</td>
                            <td>@user.BirthDate</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</body>
</html>
